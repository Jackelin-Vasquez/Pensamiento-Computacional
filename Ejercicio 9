#Ejercicio 2.

def suma_lista (lista):
    if not lista:
        return 0
    else:
        return lista [0] +suma_lista(lista[1:])
        
numeros= [1,2,3] #ejemÂ´plo de lista
resultado= suma_lista(numeros)
print(f"la suma es:{resultado}")

